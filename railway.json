{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./deployment/railway-build.sh",
    "nixpacksConfig": {
      "providers": ["node", "python"],
      "pythonVersion": "3.11",
      "nodeVersion": "18"
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}